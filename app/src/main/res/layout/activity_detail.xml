<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.detail.DetailView"
    android:orientation="vertical"
    android:background="@drawable/weather22"
    >
            <TextView
                android:id="@+id/txtName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/txtLine"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/txtName"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/txtTemperature"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLine"
                />
            <TextView
                android:id="@+id/txtDegree"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtLine"
                app:layout_constraintStart_toEndOf="@+id/txtTemperature"
                />
            <TextView
                android:id="@+id/txtRealFeel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTemperature"
                />
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRealFeel"
                />
            <TextView
                android:id="@+id/txtTemp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription"
                />

           <ImageView
               android:id="@+id/imgIcon"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:scaleType="centerCrop"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="15dp"
               android:layout_marginEnd="30dp"
                />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTemp">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>